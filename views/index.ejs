<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Dashboard</h1>
    <div class="btn-toolbar mb-2 mb-md 0">
        <div class="btn-group me-2">
            <a href="/add" class="btn btn-sm btn-outline-secondary">+ New Team</a>
        </div>
        <div class="btn-group me-2">
            <a href="/add" class="btn btn-sm btn-outline-secondary">+ New Member</a>
        </div>
    </div>
</div>

<% if (data.length) { %>
    <div class="table-responsive">

        <table class="table table-striped table-sm">

            <!-- Table Headers -->
            <thead>
                <tr>
                    <th scope="col">Team Name</th>
                    <th scope="col" class="text-center">Team Action</th>
                    <th scope="col">Member Name</th>
                    <th scope="col" class="text-center">Member Action</th>
                </tr>
            </thead>

            <!-- Table Body -->
            <tbody>

                <!-- Loop through listing -->
                <% data.forEach(element => { %>

                    <tr class="align-middle">

                        <!-- Team Name -->
                        <td><%= element.team_name %></td>

                        <!-- Actions -->
                        <td class="text-end">
                            <div class="d-flex flex-row justify-content-center gap-2">

                                <!-- View -->
                                <a href="/teams/view/<%= element.team_id %>" type="button" class="btn btn-primary btn-small">
                                    <i class="bi bi-eye"></i>
                                </a>

                                <!-- Edit -->
                                <a href="/teams/edit/<%= element.team_id %>" type="button" class="btn btn-warning btn-small">
                                    <i class="bi bi-pencil"></i>
                                </a>

                                <!-- Delete -->
                                <form action="/teams/delete/<%= element.team_id %>?_method=DELETE" method="POST" class="position-relative">
                                    <button type="submit" class="btn btn-danger btn-small">
                                        <i class="bi bi-person-x"></i>
                                    </button>
                                </form>

                            </div>
                        </td>

                        <!-- Member Name -->
                        <td><%= element.member_name %></td>

                        <!-- Actions -->
                        <td class="text-end">
                            <div class="d-flex flex-row justify-content-center gap-2">
                                <% if (element.member_id) { %>

                                    <!-- View -->
                                    <a href="/members/view/<%= element.member_id %>" type="button" class="btn btn-primary btn-small">
                                        <i class="bi bi-eye"></i>
                                    </a>

                                    <!-- Edit -->
                                    <a href="" type="button" class="btn btn-warning btn-small">
                                        <i class="bi bi-pencil"></i>
                                    </a>

                                    <!-- Delete -->
                                    <form action="/members/delete/<%= element.member_id %>?_method=DELETE" method="POST" class="position-relative">
                                        <button type="submit" class="btn btn-danger btn-small">
                                            <i class="bi bi-person-x"></i>
                                        </button>
                                    </form>
                                <% } %>
                            </div>
                        </td>

                    </tr>

                <% }) %>

            </tbody>

        </table>

    </div>
<% } else { %>

    <div>
        <p>No Data</p>
    </div>

<% } %>
